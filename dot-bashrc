# If not running interactively, don't do anything
[[ $- != *i* ]] && return

# Source global interactive definitions
if [ -f /etc/bashrc ]; then
  source /etc/bashrc
fi

shopt -s checkwinsize
shopt -s expand_aliases
shopt -s histappend

set -o vi

bind 'set completion-ignore-case on'

# Shell Tools Initialization
[[ $(command -v mise) ]] && eval "$(mise activate bash)"
[[ $(command -v atuin) ]] && eval "$(atuin init bash)"
[[ $(command -v starship) ]] && eval "$(starship init bash)"
[[ $(command -v tmuxifier) ]] && eval "$(tmuxifier init -)"
[[ $(command -v zoxide) ]] && eval "$(zoxide init --cmd cd bash)"

# Aliases
alias br='source $HOME/.bashrc'
[[ $(command -v bat) ]] && alias cat='bat'

if [[ -f $HOME/.config/dnf/config ]]; then
  alias d="sudo dnf -c $HOME/.config/dnf/config"
else
  alias d="sudo dnf"
fi

if [[ $(command -v eza) ]]; then
  alias ls="eza --color=auto --icons=auto --group-directories-first"
else
  alias ls="ls --color=auto"
fi

if [[ $(command -v paru) ]]; then
  alias p="paru"
elif [[ -f $HOME/.config/pacman/pacman.conf ]]; then
  alias p="sudo pacman --config $HOME/.config/pacman/pacman.conf"
else
  alias p="sudo pacman"
fi
