#!/bin/sh

configs=()

for config in "$@" 
do
  case "${config}" in
    "all")
      configs+=("abcde" "alacritty" "mpd" "ncmpcpp" "nvim")
      ;;
    "personal")
      configs+=("abcde" "alacritty" "mpd" "ncmpcpp" "nvim")
      ;;
    "work")
      configs+=("alacritty" "nvim")
      ;;
    *)
      configs+=("${config}")
      ;;
  esac
done

# Un-Stow Configs
for config in "${configs[@]}"
do
  echo "UNINSTALLING: ${config}"
  stow -D "${config}"
done
