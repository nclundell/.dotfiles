#!/usr/bin/env bash

set -euo pipefail

declare -A stations

stations["Quit"]="exit"
stations["Classic Rock"]="https://liveonlineradio.net/wife-fm-blazing-hot-classic-rock-radio"

station=$(for station in "${!stations[@]}"; do echo "$station"; done | wofi -d -i -p "Choose Station:") || exit

if [[ stations[station] ]]; then
  pkill -f http || echo "Starting MPV..."

  if [[ $station == "Quit" ]]; then
    echo "Radio Stopped."
    dunstify "Online Radio" "Radio has stopped. ðŸŽ¶"
    exit 1
  else
    echo "Radio Starting..."
    dunstify "Online Radio" "Playing station: ${station}. ðŸŽ¶"
    mpv ${stations[$station]}
    return
  fi
else
  echo "Radio Stopped."
  dunstify "Online Radio" "Radio has crashed. ðŸŽ¶"
  exit 0
fi
