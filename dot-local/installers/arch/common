#! /usr/bin/env bash

if ! command -v paru &> /dev/null; then
  bash $HOME/.dotfiles/dot-local/installers/arch/paru
fi

base_packages=(
  abcde
  abcde-musicbrainz-meta
  archlinux-contrib
  archlinux-keyring
  base-devel
  bash-completion
  bat
  bat-extras
  bottom
  cabextract
  curl
  direnv
  eza
  fd
  firefox
  fzf
  ghostty
  git
  git-delta
  github-cli
  glow
  glyr
  hunspell-en_us
  jq
  just
  lazydocker
  lazygit
  libffi
  libyaml
  neovim
  openssl
  p7zip
  pacman-contrib
  poppler
  resvg
  ripgrep
  rust
  speech-dispatcher
  starship
  stow
  tmux
  tree-sitter
  tree-sitter-cli
  tuned-ppd
  udiskie
  unace
  unrar
  unzip
  wget
  xdg-user-dirs
  xdg-utils
  xz
  yazi
  yt-dlp
  zellij
  zlib
  zoxide
)

echo "Installing CLI tools..."
paru -S --noconfirm --needed --quiet "${base_packages[@]}"

echo "Start tuneD service"
sudo systemctl enable --now tuned.service

