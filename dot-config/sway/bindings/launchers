# Files
bindsym $mod+y exec $term --class=io.sway.yazi -e yazi

# Music
bindsym $mod+m exec $term --class=io.sway.ncmpcpp -e ncmpcpp

# Power
bindsym $mod+u exec $HOME/.config/rofi/power.sh

# Rofi Combo Box
bindsym $mod+alt+p exec rofi -show drun -config $HOME/.config/rofi/combo.rasi
bindsym $mod+alt+r exec rofi -show run -config $HOME/.config/rofi/combo.rasi
bindsym $mod+alt+f exec rofi -show filebrowser -config $HOME/.config/rofi/combo.rasi
bindsym $mod+alt+s exec rofi -show ssh -config $HOME/.config/rofi/combo.rasi
bindsym $mod+alt+w exec rofi -show window -config $HOME/.config/rofi/combo.rasi

# Terminal
bindsym $mod+Return exec ghostty
