exec {
  mako &
  nm-applet &
  /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &
  udiskie -s -f "wezterm -e yazi" &
}

exec_always {
  $HOME/.config/sway/bar.sh
}

