### Defaults
set $mod Mod4
# set $term wezterm

### Floating (For Mouse)
# floating_modifier $mod normal

# include /etc/sway/config.d/*

### Imports
include bindings/audio
include bindings/launchers
include bindings/movement
include bindings/resize
include bindings/screenshot
include bindings/sway
